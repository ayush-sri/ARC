<android.support.constraint.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<android.support.design.widget.CoordinatorLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/mainLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:id="@+id/ap"
        android:background="#dce6ec"
        android:fitsSystemWindows="true">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:id="@+id/profile"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@color/cardview_dark_background"
            app:expandedTitleTextAppearance="@android:color/transparent"
            android:fitsSystemWindows="true"
            >
            <ImageView
                    android:contentDescription="dp"
                    android:id="@+id/profile_pic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="parallax"
                />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="220dp"
                    android:id="@+id/loading"
                    android:textAlignment="center"
                    android:text="Loading....."
                    android:textSize="20sp" />
            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                android:id="@+id/tool"
                app:layout_collapseMode="pin" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="35dp"
            app:cardElevation="6dp"
            android:clickable="true"
            android:focusable="true"
            app:cardUseCompatPadding="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/head">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="E-mail"
                        android:textColor="#8b8a8a"
                        android:layout_margin="15dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

                    <Button
                        android:layout_width="55dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="170dp"
                        android:layout_marginTop="13dp"
                        android:background="@android:color/transparent"
                        android:id="@+id/b2"
                        android:text="EDIT"
                        android:textColor="@color/colorPrimaryDark"
                        />
                </LinearLayout>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/et1"
                    android:inputType="number"
                    android:layout_marginTop="-8dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="20dp"
                    android:hint="example@gmail.com"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Roll Number"
                        android:layout_marginTop="15dp"
                        android:textColor="#8b8a8a"
                        android:layout_marginLeft="15dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
                    <Button
                        android:layout_width="55dp"
                        android:layout_height="45dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="128dp"
                        android:background="@android:color/transparent"
                        android:id="@+id/b3"
                        android:text="EDIT"
                        android:textColor="@color/colorPrimaryDark"
                        />
                </LinearLayout>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/et2"
                    android:inputType="number"
                    android:layout_marginTop="-8dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="20dp"
                    android:hint="20*************"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_weight="1"
                    android:id="@+id/spin"
                    android:layout_marginTop="35dp"
                    android:paddingLeft="30dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Course"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/atcp1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textAlignment="center"
                            android:layout_marginTop="5dp"
                            android:text="B.Tech"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textAlignment="center"
                            android:text="Branch"
                            android:textStyle="bold"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/atcp2"
                            android:layout_width="match_parent"
                            android:text="branch"
                            android:textAlignment="center"
                            android:layout_marginTop="5dp"
                            android:layout_height="match_parent"
                            />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="15sp"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:text="Semester"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textAlignment="center"
                            android:text="sems"
                            android:layout_marginTop="5dp"
                            android:id="@+id/atcp3"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Group"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:textSize="15sp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/atcp4"
                            android:layout_marginTop="5dp"
                            android:textAlignment="center"
                            android:text="group"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_marginTop="15dp">

                    <Button
                        android:id="@+id/change"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@android:color/transparent"
                        android:text="Reset Password"
                        android:textSize="12sp" />
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/changepassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="15dp"
                            android:hint="Enter new password"
                            android:inputType="textPassword"
                            android:visibility="invisible" />

                    <Button
                        android:id="@+id/show"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:layout_alignBaseline="@+id/changepassword"
                        android:layout_alignBottom="@+id/changepassword"
                        android:layout_alignEnd="@+id/changepassword"
                        android:layout_marginEnd="14dp"
                        android:background="@android:color/transparent"
                        android:text="SHOW"
                        android:textSize="10sp"
                        android:visibility="invisible" />
                    </RelativeLayout>
                     </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="40dp">
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Change Username"
                            android:textSize="12sp"
                            android:background="@android:color/transparent"
                            android:id="@+id/changeUsername"
                            android:layout_marginLeft="9dp"
                            />
                        <EditText
                            android:id="@+id/changeusername"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/show"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="5dp"
                            android:hint="Enter Username"
                            android:inputType="text"
                            android:visibility="invisible"/>
                    </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="90dp"
                    android:padding="5dp">

                    <Button
                        android:id="@+id/tracker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@android:color/transparent"
                        android:clickable="true"
                        android:focusable="true"
                        android:text="Progress Tracker"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="#818080" />

                    <TextView
                        android:id="@+id/ypgs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@+id/tracker"
                        android:layout_toRightOf="@+id/tracker"
                        android:text="your current progress"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                    <Spinner
                        android:id="@+id/subject_spinner"
                        android:layout_width="88dp"
                        android:layout_height="30dp"
                        android:layout_below="@+id/tracker"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/uploadcontent" />

                    <ProgressBar
                        android:id="@+id/progressreport"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="195dp"
                        android:layout_height="5dp"
                        android:layout_marginTop="15dp"
                        android:layout_alignEnd="@+id/ypgs"
                        android:layout_below="@+id/tracker"
                        android:layout_marginEnd="10dp" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="90dp"
                        android:layout_toEndOf="@+id/tracker"
                        android:layout_below="@+id/progressreport">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/total_marks"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:text="marks"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:text="/40"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </android.support.v4.widget.NestedScrollView>
    <android.support.design.widget.FloatingActionButton
        app:elevation="6dp"
        android:id="@+id/b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:pressedTranslationZ="12dp"
        android:src="@drawable/ic_pencil"
        app:rippleColor="#000"
        android:background="#fff"
        app:layout_anchor="@id/ap"
        app:layout_anchorGravity="bottom|right|end"/>

</android.support.design.widget.CoordinatorLayout>
</android.support.constraint.ConstraintLayout>